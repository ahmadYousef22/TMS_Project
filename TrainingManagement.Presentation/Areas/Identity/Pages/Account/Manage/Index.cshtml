@page
@model IndexModel
@*@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}*@
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Account</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">Account</a></li>
            <li class="breadcrumb-item active">Manage</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
              
 <form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>*@
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-outline-primary">Save</button>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" class="w-50"></label>
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture"
                         style="height: 250px;width: 250px;object-fit: cover;border-radius: 50px;"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))"
                         class="w-75"
                         alt="@Model.Input.FullName puctire" />
                }
                else
                {
                    <img id="profilePicture"
                         style="height: 250px;width: 250px;object-fit: cover;border-radius: 50px;"
                         src="~/man.png"
                         class="w-75"
                         title="@Model.Input.FullName puctire"
                         alt="@Model.Input.FullName puctire" />
                }
                <div class="custom-file mt-2">
                    <input type="file"
                           accept="image/*"
                           asp-for="Input.ProfilePicture"
                           class="custom-file-input"
                           onchange="document.getElementById('profilePicture').src =
                        window.URL.createObjectURL(this.files[0])" />
                    <label asp-for="Input.ProfilePicture" class="custom-file-label">
                        Choose Picture
                    </label>
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
               </form>
               
               <partial name="_StatusMessage" model="Model.StatusMessage" />
               
 </div>
</div> </div>
</div>




 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}